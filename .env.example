# ============================================
# CẤU HÌNH TELEGRAM
# ============================================
# Lấy từ @BotFather sau khi tạo bot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz1234567

# Chat ID - lấy từ getUpdates
TELEGRAM_CHAT_ID=123456789

# ============================================
# CẤU HÌNH CHẾ ĐỘ BÁO CÁO
# ============================================
# Chế độ: daily | current | incremental
# - daily: Tổng hợp theo ngày (có lặp lại)
# - current: Bảng xếp hạng hiện tại (có lặp lại)
# - incremental: Chỉ tin MỚI (không lặp) ← KHUYẾN NGHỊ
REPORT_MODE=incremental

# ============================================
# BẬT/TẮT CHỨC NĂNG
# ============================================
# Bật thu thập tin
ENABLE_CRAWLER=true

# Bật gửi thông báo
ENABLE_NOTIFICATION=true

# ============================================
# CỬA SỔ THỜI GIAN (TÙY CHỌN)
# ============================================
# Bật/tắt giới hạn khung giờ gửi tin
PUSH_WINDOW_ENABLED=false

# Giờ bắt đầu (HH:MM)
PUSH_WINDOW_START=08:00

# Giờ kết thúc (HH:MM)
PUSH_WINDOW_END=22:00

# Chỉ gửi 1 lần/ngày trong khung giờ
PUSH_WINDOW_ONCE_PER_DAY=false

# Lưu lịch sử gửi tin bao nhiêu ngày
PUSH_WINDOW_RETENTION_DAYS=7

# ============================================
# TÙY CHỈNH NÂNG CAO
# ============================================
# Sắp xếp theo vị trí cấu hình (true) hay độ hot (false)
SORT_BY_POSITION_FIRST=false

# Giới hạn tin/từ khóa (0 = không giới hạn)
MAX_NEWS_PER_KEYWORD=0

# ============================================
# CẤU HÌNH KHÁC (KHÔNG DÙNG)
# ============================================
# Để trống các kênh không dùng
# FEISHU_WEBHOOK_URL=
# DINGTALK_WEBHOOK_URL=
# WEWORK_WEBHOOK_URL=
# EMAIL_FROM=
# EMAIL_PASSWORD=
# EMAIL_TO=
# NTFY_TOPIC=
